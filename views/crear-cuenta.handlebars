<main class="contenedor">
    <form action="/crear-cuenta" method="POST" class="default-form">
        <div class="campo">
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" placeholder="Ingrese su nombre">
        </div>
        <div class="campo">
            <label for="email">Correo electrónico</label>
            <input type="email" name="email" placeholder="Ingresa tu e-mail">
        </div>
        <div class="campo">
            <label for="password">Password</label>
            <input type="password" name="password" placeholder="Ingresa tu password">
        </div>
        <div class="campo">
            <label for="password">Repetir Password</label>
            <input type="password" name="confirmar" placeholder="Repite tu password">
        </div>
        <div class="campo acciones">
            <a href="/iniciar-sesion">Volver a iniciar sesión</a>
        </div>
        <div class="campo">
            <input type="submit" value="Crear Cuenta" class="btn btn-azul">
        </div>
    </form>
</main>